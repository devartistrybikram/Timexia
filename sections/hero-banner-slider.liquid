<div class="hero-banner">
  <div
    class="owl-carousel owl-theme owl-home"
    data-items="{{ section.settings.item_de }}"
    data-loop="{{ section.settings.loop }}"
    data-margin="{{ section.settings.margin }}"
    data-autoplay="{{ section.settings.autoplay }}"
    data-autoplay-timeout="{{ section.settings.autoplay_time }}"
    data-nav="{{ section.settings.nav }}"
    data-dots="{{ section.settings.dots }}"
    data-center="{{ section.settings.center }}"
    data-slideby="{{ section.settings.item_sd }}"
    data-destroy="{% if section.settings.sm %}sm, {% endif %}{% if section.settings.md %}md, {% endif %}{% if section.settings.lg %}lg, {% endif %}{% if section.settings.xl %}xl, {% endif %}{% if section.settings.xxl %}xxl{% endif %}"
    data-responsive='{"0":{"items":{{ section.settings.item_sm }}}, "768":{"items":{{ section.settings.item_md }}}, "992":{"items":{{ section.settings.item_lg }}}, "1280":{"items":{{ section.settings.item_xl }}}, "1440":{"items":{{ section.settings.item_xxl }}}}'
  >
    {% for block in section.blocks %}
      <div class="item position-relative z-1">
        {% if block.settings.image -%}
          {{
            block.settings.image
            | image_url: width: 3240
            | image_tag: alt: block.settings.title, width: 3240, height: 2600, loading: 'lazy'
          }}
        {%- endif %}
        <div class="container carousel-content position-absolute">
          {% if block.settings.title %}
            <h4>{{ block.settings.title }}</h4>
          {% endif %}
          {% if block.settings.paragraph %}
            <p>{{ block.settings.paragraph }}</p>
          {% endif %}
          {% if block.settings.button_link -%}
            <a class="carousel-button" href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
          {%- endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Slider Banner",
  "settings": [
    {
      "type": "header",
      "content": "Carousel Options"
    },
    {
      "type": "checkbox",
      "id": "dots",
      "label": "Navigation Dots",
      "default": false,
      "info": "Show default navigation dots"
    },
    {
      "type": "checkbox",
      "id": "nav",
      "label": "Navigation Arrows",
      "default": false,
      "info": "Show default navigation arrows"
    },
	{
	  "type": "checkbox",
	  "id": "loop",
	  "label": "Loop",
	  "default": true,
	  "info": "Enable loop for the carousel"
	},
	{
	  "type": "checkbox",
	  "id": "center",
	  "label": "Center",
	  "default": true,
	  "info": "Enable Center for the carousel"
	},
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true,
      "info": "Enable autoplay for carousel"
    },
    {
      "type": "range",
      "id": "autoplay_time",
      "label": "Autoplay Time (ms)",
      "default": 3000,
      "min": 500,
      "max": 9500,
      "step": 500,
      "info": "Set time for for carousel"
    },
    {
      "type": "number",
      "id": "margin",
      "label": "Item Margin",
      "default": 0,
      "info": "Margin between two items"
    },
	{
		"type": "header",
		"content": "Carousel Items Settings"
	},
    {
      "type": "number",
      "id": "item_sd",
      "label": "Item SlideBy",
      "default": 1,
      "info": "Item slideBy"
    },
    {
      "type": "number",
      "id": "item_de",
      "label": "Item Number",
      "default": 1,
      "info": "Defualt item number"
    },
    {
      "type": "number",
      "id": "item_sm",
      "label": "Item Number",
      "default": 1,
      "info": "Items on small screen e.g. mobile"
    },
    {
      "type": "number",
      "id": "item_md",
      "label": "Item Number",
      "default": 1,
      "info": "Items on medium screen e.g. tablet"
    },
    {
      "type": "number",
      "id": "item_lg",
      "label": "Item Number",
      "default": 1,
      "info": "Items on large screen e.g. laptop"
    },
    {
      "type": "number",
      "id": "item_xl",
      "label": "Item Number",
      "default": 1,
      "info": "Items on x large screen e.g. desktop"
    },
    {
      "type": "number",
      "id": "item_xxl",
      "label": "Item Number",
      "default": 1,
      "info": "Items on xxl large screen e.g. large desktop"
    },
    {
      "type": "header",
      "content": "Destroy Carousel on Breakpoints"
    },
    {
      "type": "checkbox",
      "id": "sm",
      "label": "Small (sm)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "md",
      "label": "Medium (md)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "lg",
      "label": "Large (lg)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "xl",
      "label": "Extra Large (xl)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "xxl",
      "label": "Extra Extra Large (xxl)",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Slider Banner",
      "category": "Slideshow",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Welcome to our shop",
            "paragraph": "Check out our featured items!",
            "button_text": "Shop Now",
            "button_link": "/collections/all"
          }
        }
      ]
    }
  ]
}
{% endschema %}
